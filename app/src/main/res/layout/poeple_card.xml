<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/layout_top"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border_bottom_l"
            >
            <TextView
                android:id="@id/text1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/gary_line_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="사번"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/gary_line_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="성명"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom_l"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@drawable/border_bottom_l"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gary_line_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="부서"
                android:textColor="@color/font_333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom_l"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@drawable/border_bottom"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@color/gary_line_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="직위"
                android:textColor="@color/font_333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom_l"
            android:focusable="false"
            android:focusableInTouchMode="false"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.03"
                android:layout_height="match_parent"
                android:background="@color/gary_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:text="휴대폰"
                />
            <EditText
                android:id="@+id/editText1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/box_line_blue"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="010-1234-5678"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@drawable/border_bottom_l"
            android:focusable="false"
            android:focusableInTouchMode="false"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.03"
                android:layout_height="match_parent"
                android:background="@color/gary_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:text="메일주소"
                />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/box_line_blue"
                android:ems="20"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="asdfgf@naver.com"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom"
            android:layout_marginTop="1dp"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.03"
                android:layout_height="match_parent"
                android:background="@color/gary_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:text="주소"
                android:layout_marginBottom="1dp"
                />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/box_line_blue"
                android:ellipsize="end"
                android:ems="30"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="경기도 수원시 영통군 광교로 123-1, 경기중소기업센터본관 502호"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/border_bottom_l"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.03"
                android:background="@color/gary_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="비밀번호"
                android:textColor="@color/font_333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:background="@drawable/box_line_blue"
                android:ems="20"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <!--버튼-->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/textButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="수정"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/gary_dark"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/textButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="닫기"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>